{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "allowJs": true,
    "checkJs": false,
    "jsx": "preserve",
    "declaration": true,
    "removeComments": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "preserveConstEnums": true,
    "outDir": "./ts-out-dir",
    "sourceMap": true,
    "noUnusedLocals": false,
    "resolveJsonModule": true,
    "noUnusedParameters": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./node_modules/*"],
      "@/*": ["./resources/js/*"],
      "@fonts/*": ["./resources/fonts/*"],
      "@styles/*": ["./resources/js/styles/*"],
      "@api/*": ["./resources/js/api/*"],
      "@lang/*": ["./resources/js/lang/*"],
      "@utils/*": ["./resources/js/utils/*"],
      "@router/*": ["./resources/js/router/*"],
      "@assets/*": ["./resources/js/assets/*"],
      "@constants/*": ["./resources/js/constants/*"],
      "@layout/*": ["./resources/js/layout/*"],
      "@components/*": ["./resources/js/components/*"],
      "@store/*": ["./resources/js/store/*"],
      "@views/*": ["./resources/js/views/*"],
      "element-plus/*": ["./node_modules/element-plus/*"],
      "moment/*": ["./node_modules/moment/*"]
    },
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": [
      "vite/client",
      "vite-plugin-checker",
      "element-plus/global"
    ]
  },
  "include": [
    "resources/js/**/*",
    "resources/fonts/**/*",
    "resources/styles/**/*",
    "vite.config.ts",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "vendor",
    "public/build",
    "**/*.spec.ts",
    "**/__tests__/*"
  ]
}
