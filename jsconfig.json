{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./node_modules/*"],
      "@/*": ["./resources/js/*"],
      "@fonts/*": ["./resources/fonts/*"],
      "@styles/*": ["./resources/js/styles/*"],
      "@api/*": ["./resources/js/api/*"],
      "@lang/*": ["./resources/js/lang/*"],
      "@utils/*": ["./resources/js/utils/*"],
      "@router/*": ["./resources/js/router/*"],
      "@assets/*": ["./resources/js/assets/*"],
      "@constants/*": ["./resources/js/constants/*"],
      "@layout/*": ["./resources/js/layout/*"],
      "@components/*": ["./resources/js/components/*"],
      "@store/*": ["./resources/js/store/*"],
      "@views/*": ["./resources/js/views/*"],
      "@themes/*": ["./resources/js/styles/themes/*"],
      "@theme-fenix/*": ["./resources/js/styles/themes/theme-fenix/*"],
      "element-plus/*": ["./node_modules/element-plus/*"],
      "moment/*": ["./node_modules/moment/*"]
    },
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": [
      "vite/client",
      "vite-plugin-checker",
      "element-plus/global"
    ],
    "useDefineForClassFields": true
  },
  "include": [
    "resources/js/**/*",
    "resources/fonts/**/*",
    "resources/styles/**/*",
    "vite.config.ts",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "vendor",
    "public/build",
    "**/*.spec.ts",
    "**/__tests__/*"
  ]
}
